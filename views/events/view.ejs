<body> 

<!-- New Event -->
<div id="viewEventPage" data-role="page">

  <div data-role="header">    
      <a href="#" id="eventViewBack" data-back='true' data-icon="arrow-l">Back</a>
      <h1>Event Details.</h1>
  </div><!-- /header -->

  <div data-role="content">
  <div id="viewContent">

  </div><!-- /content -->
  <div data-role="fieldcontain">
    <fieldset data-role="controlgroup" data-type="horizontal">
      <legend><h3>Will you be there?</h3></legend>
          <input type="radio" name="radio-view" id="radio-view-a" value="attending"/>
          <label for="radio-view-a">Definitely</label>
          <input type="radio" name="radio-view" id="radio-view-b" value="maybe"/>
          <label for="radio-view-b">Maybe</label>
          <input type="radio" name="radio-view" id="radio-view-c" value="declined"/>
          <label for="radio-view-c">Not this time</label>
    </fieldset>
  </div>
  </div>

  <div data-id="footNav" data-role="footer" data-position="fixed">        
    <div data-role="navbar" data-iconpos="top">
      <ul>
        <li><a href="/events/feed" data-icon="home">Feed</a></li>
        <li><a href="/search" data-icon="search">Find</a></li>
        <li><a href="/events/new" data-icon="Plus">New Event</a></li>
        <li><a href="/users/self" data-icon="star">My Profile</a></li>
      </ul>
    </div><!-- /navbar -->
